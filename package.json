{
  "name": "autoblogger",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered WordPress autoblogging SaaS",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=./apps/*",
    "dev:all": "turbo run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:worker": "cd apps/worker && npm run dev",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd apps/web && npx prisma generate",
    "db:push": "cd apps/web && npx prisma db push",
    "db:migrate": "cd apps/web && npx prisma migrate dev",
    "db:deploy": "cd apps/web && npx prisma migrate deploy",
    "db:studio": "cd apps/web && npx prisma studio",
    "backup": "npx ts-node scripts/backup-database.ts",
    "backup:verify": "npx ts-node scripts/verify-backup.ts",
    "install:all": "npm install && npm run build:packages",
    "postinstall": "npm run build:packages"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.992.0",
    "@types/node": "^25.2.3",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@11.10.0"
}
