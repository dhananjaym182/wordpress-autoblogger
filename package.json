{
  "name": "autoblogger",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered WordPress autoblogging SaaS",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:worker": "cd apps/worker && npm run dev",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd apps/web && npx prisma generate",
    "db:push": "cd apps/web && npx prisma db push",
    "db:migrate": "cd apps/web && npx prisma migrate dev",
    "db:deploy": "cd apps/web && npx prisma migrate deploy",
    "db:studio": "cd apps/web && npx prisma studio",
    "backup": "npx ts-node scripts/backup-database.ts",
    "backup:verify": "npx ts-node scripts/verify-backup.ts",
    "install:all": "npm install && npm run build:packages",
    "postinstall": "npm run build:packages"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@types/node": "^20.11.5",
    "pg": "^8.11.3",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4"
}
